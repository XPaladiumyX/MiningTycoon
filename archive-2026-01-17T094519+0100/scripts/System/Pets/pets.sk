        else if {_name} is "&c&lChrono &6&lMole":
            set {_exp} to 18000
            set {_money} to 14800

        else if {_name} is "&c&lNuclear &6&lWyrm":
            set {_exp} to 18500
            set {_money} to 15400

        else if {_name} is "&c&lGalactic &6&lGolem":
            set {_exp} to 20000
            set {_money} to 17900

    return {_exp} and {_money}